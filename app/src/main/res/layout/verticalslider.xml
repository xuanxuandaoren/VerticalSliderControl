<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <FrameLayout
        android:id="@+id/fl_slider"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:src="@drawable/std_light_btn_adjust_disable" />

    <ImageView
        android:id="@+id/view_mid"
        android:layout_width="31.3dp"
        android:layout_height="203dp"
        android:background="#ff8f3a"
        android:layout_gravity="bottom|center"
        />

    <ImageView
        android:id="@+id/view_outer"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:src="@drawable/std_light_btn_adjust_alphe"
        />
    <View
        android:id="@+id/slider_view"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_gravity="center"
        />
    </FrameLayout>
</FrameLayout>
